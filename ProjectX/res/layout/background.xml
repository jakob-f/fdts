<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="60dp"
        android:left="240dp"
        android:right="240dp"
        android:top="60dp">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <stroke
                android:dashGap="5dp"
                android:dashWidth="10dp"
                android:width="2dp"
                android:color="#6fff00" />
        </shape>
    </item>

    <item>

        <rotate
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:fromDegrees="90"
            android:toDegrees="90" >

            <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="line" >

                <stroke
                    android:dashGap="5dp"
                    android:dashWidth="10dp"
                    android:width="2dp"
                    android:color="#ff00ff" />
            </shape>
        </rotate>
    </item>

</layer-list>