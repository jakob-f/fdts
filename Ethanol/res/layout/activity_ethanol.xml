<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#123456"
    tools:context=".Ethanol">

	<!-- upcoming pictures -->
    <LinearLayout
        android:id="@+id/top_line"
        android:layout_height="25pt"
        android:layout_width="fill_parent"
        android:gravity="center">
        
	     <TextView
	        android:id="@+id/text_top"
	        android:text="@string/not_set"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:textSize="25sp"
	        android:textStyle="bold"/>  
    </LinearLayout>

    <!-- current pictures -->
    <LinearLayout
        android:id="@+id/center_line"
        android:layout_height="110pt"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_below="@id/top_line"
        android:background="#000000">

        <ImageView
	        android:id="@+id/leftPic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/not_set"
	        android:layout_weight="1"/>
	    <ImageView
	        android:id="@+id/centerPic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/not_set"
	        android:layout_weight="2"/>
	    <ImageView
	        android:id="@+id/rightPic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/not_set"
	        android:layout_weight="1"/>
    </LinearLayout>
    
    <!-- viewed pictures -->
    <LinearLayout
        android:id="@+id/bottom_line"
        android:layout_height="25pt"
        android:layout_width="fill_parent"
        android:layout_below="@id/center_line"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <TextView
	        android:id="@+id/text_bottom"
	        android:text="@string/not_set"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:textSize="25sp"
	        android:textStyle="bold"/>       
    </LinearLayout>
	    
	     <!-- gestures -->
    <android.gesture.GestureOverlayView
        android:id="@+id/gestures"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:eventsInterceptionEnabled="true"
        android:gestureStrokeType="multiple"
        android:gestureColor="#00000000"
        android:uncertainGestureColor="#00000000"
        android:layout_above="@id/gestures">
    </android.gesture.GestureOverlayView>
</RelativeLayout>